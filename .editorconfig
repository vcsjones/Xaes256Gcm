root = true

[*.cs]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Formatting
csharp_new_line_before_open_brace = none # k&r styling

[*.csproj]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.sln]
end_of_line = crlf
indent_style = tab